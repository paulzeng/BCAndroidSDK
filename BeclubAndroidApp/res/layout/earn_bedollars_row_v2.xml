<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/left"
        android:background="@drawable/earn_bedollars_item_border">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:scaleType="fitStart"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/brand_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b_line_divider_top_gray"
            android:layout_below="@id/brand_1" />

        <LinearLayout
            android:layout_below="@+id/brand_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brand_1_icons"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_picture_camera_icon_grey"
                android:layout_marginRight="5dp"
                android:id="@+id/brand_1_picture" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/card_grey"
                android:layout_marginRight="5dp"
                android:id="@+id/brand_1_card" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/code_icon_gray"
                android:layout_marginRight="3dp"
                android:id="@+id/brand_1_code" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/piedini_grey"
                android:layout_marginRight="3dp"
                android:id="@+id/brand_1_cal" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/web_icon_gray_big"
                android:layout_marginRight="2dp"
                android:id="@+id/brand_1_web" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/collective_mini_grey"
                android:layout_marginRight="5dp"
                android:id="@+id/brand_1_collective" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>