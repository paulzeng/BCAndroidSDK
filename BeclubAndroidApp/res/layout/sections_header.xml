<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/balance_header_container"
        android:layout_height="40dp"
        android:background="@color/b_sections_header_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_my_balance"
            android:textColor="@color/b_sections_header_text"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/mybalance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:gravity="right"
            android:id="@+id/header_bedollars_amount"
            android:textColor="@color/b_yellow_bedollars"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView"
            android:src="@drawable/bed_small"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/b_line_divider_bottom_gray"></RelativeLayout>
</LinearLayout>