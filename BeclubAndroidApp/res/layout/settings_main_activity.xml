<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/settings_main_account_settings"
            android:textColor="@color/b_green" />

        <RelativeLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/b_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:id="@+id/tv_account_info"
            android:text="@string/settings_main_account_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b_line_divider_bottom_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_change_psw"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:id="@+id/tv_change_password"
                android:text="@string/settings_main_change_password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/ll_divider"
                android:orientation="vertical"
                android:background="@color/b_line_divider_bottom_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textAllCaps="true"
            android:text="App Settings"
            android:textColor="@color/b_green" />

        <RelativeLayout
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/b_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:id="@+id/tv_push_notification"
            android:text="@string/settings_main_push_notifications" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b_line_divider_bottom_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/action_button" />

    </LinearLayout>
</ScrollView>
