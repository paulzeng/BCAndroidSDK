<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/b_white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/b_gray_button"
            android:src="@drawable/top_img_reg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#fff" >
        </RelativeLayout> 

        <RelativeLayout
            android:id="@+id/fb_container"
            android:layout_width="fill_parent"
            android:layout_height="69dp"
            android:background="@color/b_gray_button"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <RelativeLayout
                android:id="@+id/facebook_login"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:background="@color/b_fb_light_blue" >

                    <ImageView 
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/facebook" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/facebook_login_right"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/facebook_button"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal" >

                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="@string/facebook_login"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/b_line_divider_top_gray" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signup_by_email"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal" >

            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/signup_by_email"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/existing_account"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal" >

            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/existing_account"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>