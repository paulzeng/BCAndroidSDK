<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/earn_bedollars_reward_mission_completed"
        android:gravity="center"
        android:textColor="@color/b_white"
        android:background="@color/b_green"
        android:id="@+id/mission_dialog_title" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earn_bedollars_scan_popup1"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/b_bestore_text"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earn_bedollars_scan_popup2"
                android:textSize="13sp"
                android:textColor="@color/b_bestore_text"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earn_bedollars_scan_popup3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/b_yellow_bedollars"
                android:id="@+id/scan_amount_won" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:src="@drawable/bedollars"
            android:id="@+id/imageView" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/b_gray_texts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/share_buttons_container"
        android:background="@color/b_light_gray">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/earn_bedollars_misson_completed_share"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/b_gray_texts" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/share_buttons_container2"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/facebook_share"
                android:src="@drawable/share_fb"
                android:background="@drawable/grey_highlight"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="34dp"
                android:layout_height="34dp" />

            <ImageButton
                android:id="@+id/twitter_share"
                android:src="@drawable/share_twitter"
                android:background="@drawable/grey_highlight"
                android:layout_marginRight="10dp"
                android:layout_width="34dp"
                android:layout_height="34dp" />

            <ImageButton
                android:id="@+id/gplus_share"
                android:src="@drawable/share_google"
                android:background="@drawable/grey_highlight"
                android:layout_marginRight="10dp"
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>