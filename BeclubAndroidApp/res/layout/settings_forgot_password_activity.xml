<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/old_password"
        android:hint="@string/settings_changepassword_oldpwd"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:password="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/b_gray_texts" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_password"
        android:hint="@string/settings_changepassword_newpwd"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:password="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/b_gray_texts" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_password_repeat"
        android:hint="@string/settings_changepassword_newpwdagain"
        android:textSize="14sp"
        android:password="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/b_gray_texts" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/settings_changepassword_show"
        android:id="@+id/checkBox" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/green_button"
        android:clickable="true"
        android:id="@+id/change_password_button"
        android:visibility="visible"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_changepassword_button"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16sp"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />
    </RelativeLayout>
</LinearLayout>